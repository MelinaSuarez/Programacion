// Descripcion: Calcula el area de la circunferencia 
// 

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"


void main ()
{
 float radio,Pi,area;
 printf("\t calculo del area de la circunferencia \n");
 printf("\t ****************************** \n\n\n");
 printf("ingrese radio: "); 
 scanf ("%f",&radio);
 printf("ingrese Pi: ");
 scanf("%f",&Pi);
 if (radio>0)
 { 
  //calcula el area
 area=(Pi*radio*radio);
 printf("\nEl area es:%f",area);
 }
 else 
 { 
 printf("\n\n :::::::ERROR al ingresar,no permite numeros negativos!:::::::");
  }
 getch();  
}
